{
  "name": "vue-indoor",
  "version": "1.0.2",
  "description": "Vue IndoorJS library",
  "author": "Mudin Ibrahim",
  "scripts": {
    "serve": "npm run build -- -w",
    "build": "rollup -c --environment NODE_ENV:production",
    "prepare": "npm run lint && npm run build",
    "postversion": "git push --follow-tags",
    "lint": "eslint --ext .js,.vue --ignore-path .eslintignore .",
    "test": "jest",
    "test:w": "jest --watch",
    "docs:serve": "docsify serve ./docs -p 4000 -o"
  },
  "dependencies": {
    "indoorjs": "^1.0.15"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/runtime": "^7.6.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^9.2.5",
    "rollup": "^1.21.4",
    "rollup-copy-plugin": "^0.1.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-vue": "^5.0.1",
    "typescript": "^3.6.3",
    "vue": "^2.6.10",
    "vue-jest": "4.0.0-beta.2",
    "vue-template-compiler": "^2.6.10"
  },
  "files": [
    "dist/",
    "src/",
    "types/*.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "vue",
    "indoorjs"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ],
    "*.vue": [
      "eslint",
      "git add"
    ]
  },
  "main": "dist/vue-indoor.cjs.js",
  "unpkg": "dist/vue-indoor.min.js",
  "module": "dist/vue-indoor.es.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/mudin/vue-indoor.git"
  },
  "typings": "types/index.d.ts"
}
