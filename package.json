{
  "name": "vue-indoor",
  "version": "2.0.0",
  "description": "Vue IndoorJS library",
  "author": "Mudin Ibrahim",
  "scripts": {
    "serve": "npm run build -watch",
    "build": "vue-cli-service build --target lib --name vue-indoor src/index.js",
    "prepare": "npm run lint && npm run build",
    "postversion": "git push --follow-tags",
    "lint": "eslint --ext .js,.vue --ignore-path .eslintignore .",
    "test": "jest",
    "test:w": "jest --watch",
    "docs:serve": "docsify serve ./docs -p 4000 -o"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/runtime": "^7.8.3",
    "@vue/cli-service": "^4.1.2",
    "@vue/test-utils": "^1.0.0-beta.31",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.1.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^10.0.3",
    "typescript": "^3.7.5",
    "vue": "^2.6.11",
    "vue-jest": "4.0.0-beta.2",
    "vue-template-compiler": "^2.6.11"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "vue",
    "indoorjs"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ],
    "*.vue": [
      "eslint",
      "git add"
    ]
  },
  "main": "dist/vue-indoor.cjs.js",
  "unpkg": "dist/vue-indoor.min.js",
  "module": "dist/vue-indoor.es.js",
  "browser": "dist/vue-indoor.umd.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/mudin/vue-indoor.git"
  }
}
